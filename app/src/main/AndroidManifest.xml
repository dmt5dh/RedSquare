<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="arashincleric.com.econsquarestudy" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/red_square"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionnaireActivity"
            android:label="@string/title_activity_questionnaire"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".TaskCompleteScreen"
            android:label="@string/title_activity_task_complete_screen"
            android:screenOrientation="sensorLandscape">
        </activity>
    </application>

</manifest>
